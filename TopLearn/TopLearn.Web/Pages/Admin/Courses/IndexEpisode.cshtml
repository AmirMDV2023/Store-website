@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.IndexEpisodeModel
@{
    ViewData["Title"] = "لیست بخش ها";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست قسمت ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست قسمت های دوره "@ViewData["CourseTitle"]"
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a class="btn btn-outline btn-success" asp-route-id="@ViewData["CourseId"].ToString()" asp-page="CreateEpisode">افزودن بخش جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان بخش</th>
                                    <th>زمان جلسه</th>
                                    <th>رایگان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CourseEpisodes)
                                {
                                    <tr>
                                        <td>
                                            @item.EpisodeTitle
                                        </td>
                                        <td>
                                            @item.EpisodeTime
                                        </td>
                                        <td>
                                            @if (item.IsFree)
                                            {
                                                <span class="text-success">
                                                    <i class="glyphicon glyphicon-ok"></i>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">
                                                    <i class="glyphicon glyphicon-remove"></i>
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/Courses/EditEpisode/@item.EpisodeId" class="btn btn-warning btn-sm">ویرایش</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">

                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>