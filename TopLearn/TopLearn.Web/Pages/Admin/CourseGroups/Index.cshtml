@page
@model TopLearn.Web.Pages.Admin.CourseGroups.IndexModel
@{
    ViewData["Title"] = "لیست گروه ها";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست گروه ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست گروه های سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div class="col-md-12" style="margin: 10px 0;">
                        <a class="btn btn-outline btn-success" asp-page="CreateGroup">افزودن گروه جدید</a>
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr>
                                <th>عنوان گروه</th>
                                <th>زیر گروه ها</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.CourseGroups.Where(g => g.ParentId == null))
                            {
                                <tr>
                                    <td>@group.GroupTitle</td>
                                    <td>
                                        @if (group.CourseGroups.Any())
                                        {
                                            <ul>
                                                @foreach (var sub in group.CourseGroups)
                                                {
                                                    <li>
                                                        @sub.GroupTitle - <a href="/Admin/CourseGroups/EditGroup/@sub.GroupId" class="btn btn-outline btn-warning btn-xs">ویرایش</a>
                                                        <a href="/Admin/CourseGroups/DeleteGroup/@sub.GroupId" class="btn btn-outline btn-danger btn-xs">حذف</a>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Admin/CourseGroups/CreateGroup/@group.GroupId" class="btn btn-info btn-sm">زیر گروه</a>
                                        <a href="/Admin/CourseGroups/EditGroup/@group.GroupId" class="btn btn-warning btn-sm">ویرایش</a>
                                        <a href="/Admin/CourseGroups/DeleteGroup/@group.GroupId" class="btn btn-danger btn-sm">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>