@page
@using TopLearn.Core.Convertors
@model TopLearn.Web.Pages.Admin.Discount.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کد ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کدهای تخفیف
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">
                            <a class="btn btn-outline btn-success" asp-page="CreateDiscount">افزودن کد جدید</a>
                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>کد</th>
                                    <th>تعداد</th>
                                    <th>درصد تخفیف</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Discounts)
                                {
                                    <tr>
                                        <td>@item.DiscountCode</td>
                                        <td>@item.UsableCount</td>
                                        <td>@item.DiscountPercent</td>
                                        <td>@((item.StartDate!=null)?item.StartDate.Value.ToShamsi():"")</td>
                                        <td>@((item.EndDate!=null)?item.EndDate.Value.ToShamsi():"")</td>
                                        <td>
                                            <a href="/Admin/Discount/EditDiscount/@item.DiscountId" class="btn btn-warning btn-sm">ویرایش</a>
                                            @*<a href="/Admin/Discount/DeleteDiscount/@item.DiscountId" class="btn btn-danger btn-sm">حذف</a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">

                        </div>
                    </div>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>