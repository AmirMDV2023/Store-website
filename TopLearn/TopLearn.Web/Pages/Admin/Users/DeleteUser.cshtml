@page "{id}"
@model TopLearn.Web.Pages.Admin.Users.DeleteUserModel
@{
    ViewData["Title"] = "حذف کاربر";
}
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            حذف کاربر
        </div>
        <div class="panel-body">
            <form method="post">
                <input type="hidden" name="UserId" value="@ViewData["UserId"].ToString()"/>
                <dl class="dl-horizontal">
                    <dt>نام کاربری : </dt>
                    <dd>@Model.InformationUserViewModel.UserName</dd>
                    <dt>ایمیل : </dt>
                    <dd>@Model.InformationUserViewModel.Email</dd>
                    <dt>موجودی کیف پول : </dt>
                    <dd>@Model.InformationUserViewModel.Wallet</dd>
                    <dt>تاریخ عضویت : </dt>
                    <dd>@Model.InformationUserViewModel.RegisterDate<hr/></dd>
                    <dt></dt>
                    <dd style="display: inline-table;">
                        
                        <input style="width: 70px;" type="submit" value="حذف" class="btn btn-danger"/>
                    </dd>
                    <dt></dt>
                    <dd style="display: inline-table;margin-right: 2px;">
                        <a asp-page="Index"><input style="width: 70px;" type="button" value="برگشت" class="btn btn-default" /></a>
                    </dd>
                </dl>
            </form>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>